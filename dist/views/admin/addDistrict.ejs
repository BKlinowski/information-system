<%- include("../includes/head.ejs") %>
  </head>

  <body>
    <%- include("../includes/nav.ejs") %>
      <div class="columns">
        <div
          class="column is-6-tablet is-offset-3-tablet is-6-desktop is-offset-3-desktop is-4-widescreen is-offset-4-widescreen">
          <form action="/admin/addDistrict" method="post">
            <% if (isEdit) { %>
              <input type="hidden" name="isEdit" value="true">
              <input type="hidden" name="oldName" value="<%= oldName %>">
              <% } else { %>
                <input type="hidden" name="isEdit" value="false">
                <% } %>
                  <div class="field">
                    <p class="control has-icons-left has-icons-right">

                      <input name="name" class="input" type="text" placeholder="name" value="<%= name %>">

                      <span class="icon is-small is-left">
                        <i class="fab fa-amilia"></i>
                      </span>
                      <span class="icon is-small is-right">
                      </span>
                    </p>
                  </div>
                  <div class="field">
                    <p class="control has-icons-left">

                      <input name="imageURL" class="input" type="text" placeholder="imageURL" value="<%= imageURL %>">

                      <span class="icon is-small is-left">
                        <i class="fas fa-print"></i>
                      </span>
                    </p>
                  </div>
                  <div class="field">
                    <p class="control">
                      <% if (isEdit) { %>
                        <button type="submit" class="button is-link">
                          Update
                        </button>
                        <% } else {%>
                          <button type="submit" class="button is-success">
                            Add
                          </button>
                          <% } %>
                    </p>
                  </div>
                  <% if (error) { %>
                    <article class="message is-danger">
                      <div class="message-header">
                        <p>Validation errors</p>
                      </div>
                      <div class="message-body">
                        <% error.forEach(err=> { %>
                          <%= err.msg %>
                            <br>
                            <% }) %>
                      </div>
        </div>
        </article>
        <% } %>

          </form>
      </div>
      </div>
  </body>