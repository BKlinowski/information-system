      <div class="columns">
        <div
          class="column is-6-tablet is-offset-3-tablet is-6-desktop is-offset-3-desktop is-4-widescreen is-offset-4-widescreen">
          <form action="/admin/addInformation" method="POST">
            <div class="field">
              <p class="control has-icons-left has-icons-right">
                <input name="title" class="input" type="text" placeholder="title">
                <span class="icon is-small is-left">
                  <i class="fab fa-amilia"></i>
                </span>
                <span class="icon is-small is-right">
                </span>
              </p>
            </div>
            <div class="field">
              <p class="control has-icons-left">
                <input name="description" class="input" type="text" placeholder="description">
                <span class="icon is-small is-left">
                  <i class="fas fa-align-justify"></i>
                </span>
              </p>
            </div>
            <div class="field">
              <p class="control has-icons-left">
                <input name="importance" class="input" type="number" min="1" max="3" placeholder="importance">
                <span class="icon is-small is-left">
                  <i class="fas fa-exclamation-circle"></i>
                </span>
              </p>
            </div>
            <div class="field">
              <p class="control has-icons-left">
                <input name="imageURL" class="input" type="text" placeholder="imageURL">
                <span class="icon is-small is-left">
                  <i class="fas fa-print"></i>
                </span>
              </p>
            </div>
            <div class="field">
              <p class="control has-icons-left">
                <input name="district" class="input" type="text" placeholder="district">
                <span class="icon is-small is-left">
                  <i class="fas fa-city"></i>
                </span>
              </p>
            </div>
            <div class="field">
