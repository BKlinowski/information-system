<%- include("../includes/head.ejs") %>
  </head>

  <body>
    <%- include("../includes/nav.ejs") %>
      <% info.forEach(info=> { %>
        <div class="columns">
          <div class="column is-6-widescreen is-offset-3-widescreen is-8-tablet is-offset-2-tablet">
            <div class="box <% if (info.doc.importance == 3) { %>
                 border--danger
                <% } %> 
                <% if (info.doc.importance == 2) { %>
                    border--warning
                <% } %> 
                <% if (info.doc.importance == 1) {%>
                    border--info
                     <% }%>
                    ">
              <article class="media">
                <figure class="media-left">
                  <p class="image is-128x128">
                    <img src="<%= info.doc.imageURL %>">
                  </p>
                </figure>
                <div class="media-content">
                  <div class="content">
                    <p>
                      <strong>
                        <%= info.doc.title %>
                      </strong>
                    </p>
                    <%= info.doc.description %>
                      <p>From: <%= info.districtName %>
                      </p>
                  </div>
                  <nav class="level is-mobile">
                    <div class="level-left">

                    </div>
                  </nav>
                </div>
                <div class="media-right">
                  <% if (info.doc.importance==3) { %>
                    <i class="fas fa-exclamation-circle fa-2x"></i>
                    <% } %>
                      <% if (info.doc.importance==2) { %>
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                        <% } %>
                          <% if (info.doc.importance==1) {%>
                            <i class="fas fa-info-circle fa-2x"></i>
                            <% }%>
                </div>
              </article>
            </div>
          </div>
        </div>
        <% }) %>
  </body>